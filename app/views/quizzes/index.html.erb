<div class="container admin_entry">

<div class="admin_entry">
<h1>Listing Questions</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Optiona</th>
      <th>Optionb</th>
      <th>Optionc</th>
      <th>Optiond</th>
      <th>Correct</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.question %></td>
        <td><%= quiz.optiona %></td>
        <td><%= quiz.optionb %></td>
        <td><%= quiz.optionc %></td>
        <td><%= quiz.optiond %></td>
        <td><%= quiz.correct %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quiz', new_quiz_path %>

</div>
</div>